<%- include("header.ejs"); -%>

    <div class="box" id="heading">
        <h1> <%=listTitle%> </h1>
    </div>

    <div class="box">
        
         <% newListItems.forEach((item) => { %>              <!-- arrow function -> callback function -->
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                        <p> <%= item.name %> </p>
                </div>
                    <input type="hidden" name="listName" value="<%= listTitle %>"></input>  <!-- make sure that we add a closing input tag because it's not a self closing tag, -->
            </form>
            <% }); %>
            
            <form class ="item" action="/" method="post">
                <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                <button type="submit" name="list" value=<%= listTitle %>>+</button>
            </form>
    </div>

    <%- include("footer.ejs"); -%>
